<mvc:View
	controllerName="my.nice.app.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
>
	<Page
		id="homePage"
		title="{i18n>title}"
	>
		<Table
			id="productsTable"
			items="{
				path: '/Products',
				parameters: {
					expand: 'Supplier'
				},
				sorter: {
					path: 'Name'
				}
			}"
			growing="true"
			growingThreshold="5"
			growingScrollToLoad="false"
		>
			<headerToolbar>
				<Toolbar>
					<Button
						icon="sap-icon://add-document"
						press="addProduct"
					/>
					<ToolbarSpacer/>
					<SearchField
						width="50%"
						search="onFilterProducts"
					/>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="{i18n>table.product}"/>
				</Column>
				<Column>
					<Text text="{i18n>table.price}"/>
				</Column>
				<Column>
					<Text text="{i18n>table.supplier}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem
					vAlign="Middle"
					type="Active"
					press="openProduct(${ID})"
				>
					<cells>
						<ObjectIdentifier
							title="{Name}"
							text="{Description}"
						/>
						<ObjectNumber
							number="{
								parts: [{
									path: 'Price'
								}, {
									path: 'CurrencyCode'
								}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: true
								}
							}"
							unit="BR"
						/>
						<Text text="{Supplier/Name}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<core:Fragment
			fragmentName="my.nice.app.view.fragment.ContactInfo"
			type="XML"
		/>
	</Page>
</mvc:View>